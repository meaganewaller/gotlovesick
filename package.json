{
  "name": "secretgardens",
  "version": "1.0.0",
  "description": "The frontend for secret gardens built with NextJS",
  "private": true,
  "type": "module",
  "sideEffects": [
    "*.scss",
    "*.css"
  ],
  "scripts": {
    "dev": "next dev --port 3000",
    "build": "pnpm run i18n:compile && next build && pnpm run build:sitemap",
    "build:sitemap": "next-sitemap --config next-sitemap.config.cjs && shx cp -r public .next/standalone && shx cp -r .next/static .next/standalone/.next/static",
    "start": "next start --port 3000",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "eslint -c eslint.config.cjs ./",
    "check-unused": "npx knip",
    "format": "prettier --write .",
    "test-all": "pnpm run check-format && pnpm run check-lint && pnpm run check-types && pnpm run build",
    "build-ci": "next build",
    "check-locale": "node check-locale.js"
  },
  "license": "ISC",
  "dependencies": {
    "@fontsource/dm-sans": "^5.1.0",
    "@fontsource/ibm-plex-mono": "^5.1.0",
    "@fontsource/prata": "^5.1.0",
    "@next/bundle-analyzer": "^15.1.0",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-aspect-ratio": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "@react-email/components": "0.0.31",
    "@react-email/render": "1.0.3",
    "@sentry/nextjs": "8.45.1",
    "@tailwindcss/typography": "0.5.15",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.3",
    "feed": "^4.2.2",
    "flex-layout-attribute": "^1.0.3",
    "graphql": "^16.10.0",
    "i18next": "24.1.2",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "modern-normalize": "^3.0.1",
    "next": "^15.1.0",
    "next-i18next": "15.4.1",
    "next-sitemap": "^4.2.3",
    "postcss-loader": "^8.1.1",
    "prismjs": "^1.29.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-email": "3.0.4",
    "react-google-recaptcha": "3.1.0",
    "react-hot-toast": "2.4.1",
    "react-i18next": "15.2.0",
    "react-icons": "^5.4.0",
    "schema-dts": "^1.1.2",
    "sharp": "^0.33.5",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.3",
    "validator": "^13.12.0",
    "xml-escape": "^1.1.0",
    "yup": "1.6.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/node": "22.10.2",
    "@types/prismjs": "^1.26.5",
    "@types/react": "18.3.13",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "autoprefixer": "10.4.20",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-i18next": "6.1.1",
    "mini-svg-data-uri": "^1.4.4",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.9",
    "prisma": "6.0.1",
    "tailwindcss": "3.4.16",
    "tailwindcss-border-image": "^1.1.2",
    "tailwindcss-debug-screens": "^2.2.1",
    "tailwindcss-hocus": "^0.0.7",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  }
}
